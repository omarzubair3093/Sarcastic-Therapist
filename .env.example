# Sarcastic Therapist - Environment Variables
# Save this as .env in your project root directory and fill in your actual keys.

# Flask configuration
FLASK_APP=app.py
FLASK_DEBUG=1
FLASK_SECRET_KEY=your_super_secret_key_here

# Supabase configuration (optional)
SUPABASE_URL=your_supabase_url_here
SUPABASE_KEY=your_supabase_service_role_key_here

# AI API keys (at least one is required)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo

# Dia TTS (local)
DIA_API_KEY=            # leave blank for local
DIA_API_URL=http://127.0.0.1:8000/predict

# Optional: Amazon Polly for fallback TTS (optional )
AWS_ACCESS_KEY_ID=your_aws_access_key_id_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key_here
AWS_REGION=us-east-1

# ElevenLabs TTS
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here
ELEVENLABS_VOICE=Rachel

# Optional: Voice settings defaults
DEFAULT_VOICE_NAME=
DEFAULT_SPEECH_RATE=1.0
DEFAULT_SARCASM_LEVEL=7
